<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium_3"
    android:layout_marginRight="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:background="@drawable/talker">

        <TextView
            android:id="@+id/tv_speaker_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@android:color/black"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:text="5:50"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rl_background"
        android:layout_marginLeft="@dimen/text_small"
        android:layout_toRightOf="@+id/rl_background"
        android:text="Ditmir Bushati"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/tv_profile_jo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_profile_name"
        android:layout_below="@+id/tv_profile_name"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Minister for Europe and Foreign Affairs"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/dot_width"
        android:layout_height="@dimen/dot_height"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_talker_name"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:src="@drawable/dot" />
</RelativeLayout>